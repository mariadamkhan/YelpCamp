<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="stylesheets/login-register.css">

<div class="container d-flex justify-content-center align-items-center mt-3">
  <div class="row flex-fill">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card">
        <img class="card-img-top"src="https://images.unsplash.com/photo-1631635589499-afd87d52bf64?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1471&q=80" alt="">
       <div class="card-body">
         <h5 class="card-title">Register</h5>
         <form action="/register" method="POST" class="validated-form" novalidate>
          <div class=mb-3>
              <label class="form-label" for="location">Username</label>
              <input  class="form-control" type="text" id="username" name="username" autofocus required/>
              <div class="valid-feedback">
                  Looks great!
              </div>
            </div>
      
            <div class=mb-3>
              <label class="form-label" for="email">Email</label>
              <input  class="form-control" type="email" id="email" name="email" required/>
              <div class="valid-feedback">
                  Looks great!
              </div>
            </div>
      
            <div class=mb-3>
              <label class="form-label" for="password">Password</label>
              <input  class="form-control" type="password" id="password" name="password" required/>
              <div class="valid-feedback">
                  Looks great!
              </div>
            </div>
            <div class="d-grid">              
              <button class="btn btn-success">Login</button>            
          </div>
      </form>
       </div>
      </div>
    </div>
  </div>
</div>







